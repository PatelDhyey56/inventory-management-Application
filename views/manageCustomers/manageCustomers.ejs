<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Customers</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
  <script src="/js/bootstrap.js"></script>
  <link rel="stylesheet" href="src/css/allpage.css" />
  <link rel="stylesheet" href="src/css/manageCustomers/manageCustomers.css" />
  <script src="/socket.io/socket.io.js"></script>
  <script src="js/manageCustomers/manageCustomers.js"></script>
  <script src="js/manageCustomers/manageCustomerInsert.js"></script>
  <script src="js/manageCustomers/manageCustomerUpdate.js"></script>
  <script src="js/commonFunction/commonFunction.js"></script>
  <script src="js/manageCustomers/manageCustomerFormValidation.js"></script>
  <script src="js/manageCustomers/manageCustomerFilter.js"></script>
  <script src="js/components/messagePopUp.js"></script>
  <script src="js/manageCustomers/manageCustomerFileUpload.js"></script>
</head>

<body onload="getCustomers()">
  <%- include('../components/navigation', {data})%>
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModal" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title" id="deleteModal">Delete Customer</h1>
            <button type="button" class="btn-close" onclick="modelHide('#deleteModal')" data-bs-dismiss="modal"
              aria-label="Close">
            </button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete this customer ?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" onclick="modelHide('#deleteModal')"
              data-bs-dismiss="modal">No</button>
            <button type="button" id="confirm" class="btn btn-danger">Yes</button>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="reactivateModal" tabindex="-1" aria-labelledby="reactivateModal" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title" id="reactivateModal">Reactivate Customer</h1>
            <button type="button" class="btn-close" onclick="modelHide('#reactivateModal')" data-bs-dismiss="modal"
              aria-label="Close">
            </button>
          </div>
          <div class="modal-body">
            Are you sure you want to reactivate this customer ?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" onclick="modelHide('#reactivateModal')"
              data-bs-dismiss="modal">No</button>
            <button type="button" id="confirmreactivate" class="btn btn-danger">Yes</button>
          </div>
        </div>
      </div>
    </div>

    <section class="div-second managecustomer-section">
      <div class="managecustomer-container" id="managecustomer-container">
        <div class="d-flex">
          <img src="icons/cust.png" alt="" width="40px" height="40px" style="margin-top: 20px;">
          <p class="managecustomerTitle">Customers</p>
        </div>
        <div class="managecustomer-container__button">
          <p class="addnewcustomerbutton" onclick="addNewCustomer()">Add New</p>
          <p class="customerfilterbutton" onclick="customerFilterShow()">Filter</p>
        </div>
        <select id="customerStatus" onchange="getCustomers()">
          <option value="active" selected>Active</option>
          <option value="inactive">Inactive</option>
        </select>
        <div class="importDataDiv">
          <p class="importDataButton" onclick="showFileUpload()">Import Data</p>
          <form enctype="multipart/form-data" id="customerFileUploadForm" name="customerFileUploadForm">
            <input type="file" id="customersFile" name="customersFile" accept=".csv">
            <p id="fileUploadButton" onclick="customerFileUpload()">Upload File</p>
          </form>
        </div>

      </div>
      <%- include('../form/customerForm')%>
        <section class="d-flex justify-content-center" id="paggination">
          <%- include('../components/pagginationComponent')%>
        </section>
    </section>
</body>

</html>